// Schema.prisma

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Universities {

    id    Int    @id @default(autoincrement())
    code String
    name String
    faculties Faculties[]
    
}

model Faculties {

    id         Int         @id @default(autoincrement())
    name     String
    university Universities? @relation(fields: [universityId], references: [id])
    programs Programmes[]
    universityId Int

}

model Programmes {

    id           Int    @id @default(autoincrement())
    title        String
    faculty Faculties? @relation(fields: [facultyId], references: [id])
    facultyId Int
    requirement Requirements?
	
}

model Requirements {

    id      Int @id @default(autoincrement())
    program Programmes? @relation(fields: [programId], references: [id])
    programId Int
    possibleCombinations PossibleCombinations[]

}

model PossibleCombinations {

    id            Int      @id @default(autoincrement())
    subjects    Subjects[]
    subjectId Int
    minimum_grade Int
    required      String
    requirements Requirements[]

}

model Subjects {

    id         Int    @id @default(autoincrement())
    possibleCombinations PossibleCombinations? @relation(fields: [combinationId], references: [id])
    combinationId Int
    title      String
    discipline String
    curriculum String

}
